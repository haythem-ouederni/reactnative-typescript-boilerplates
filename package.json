{
  "name": "RNTestProject",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "npm run clean:test && npm run lint:test && npm run tsc:test && npm run jest",
    "jest": "jest --coverage",
    "watch": "npm run build -- -w",
    "lint": "tslint src/ts/**/*.ts{,x}",
    "lint:test": "tslint __tests__/ts/**/*.ts{,x}",
    "tsc": "tsc",
    "tsc:test": "tsc",
    "clean": "rimraf src/**/*.js",
    "clean:test": "rimraf __tests__/**/*.js{,.map}",
    "build": "npm run clean && npm run lint && npm run tsc --",
    "start:ios": "npm run build && concurrently -r 'npm run watch' 'react-native run-ios'",
    "start:android": "npm run build && concurrently -r 'npm run watch' 'react-native run-android'"
  },
  "dependencies": {
    "native-base": "^2.1.3",
    "react": "16.0.0-alpha.6",
    "react-native": "0.44.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/react": "^15.0.24",
    "@types/react-native": "^0.43.11",
    "babel-jest": "19.0.0",
    "babel-preset-react-native": "1.9.1",
    "concurrently": "^3.4.0",
    "jest": "19.0.2",
    "react-test-renderer": "16.0.0-alpha.6",
    "rimraf": "^2.6.1",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "/.+\\.(test|spec).js$",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "__tests__/**/*.js",
      "!__tests__/**/*.spec.js",
      "!__tests__/**/*.index.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!native-base)/"
    ]
  }
}